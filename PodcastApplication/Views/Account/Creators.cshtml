@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Creators";
}

<style>
    .about-image {
        height: 300px;
        width: 260px;
        object-fit: cover;
    }

    .team-thumb {
        margin-bottom: 30px; /* Add margin between the cards */
        border-radius: 10px; /* Optional: rounded corners */
        overflow: hidden;
    }

    .team-info {
        padding: 15px; /* Add padding for better spacing inside the card */
    }

    .social-share {
        padding: 10px;
    }
</style>

<section class="about-section section-padding" id="section_2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Creators</h4>
                </div>
            </div>

            @foreach (var user in Model)
            {
                <div class="col-lg-3 col-md-6 col-12 d-flex align-items-stretch mb-4">
                    <!-- Add mb-4 for spacing -->
                    <div class="team-thumb bg-white shadow-lg w-100">
                        <!-- Ensure cards fill the available width -->
                        <img src="~/images/profile/@(string.IsNullOrEmpty(user.ProfileImg) ? "userImg.png" : user.ProfileImg)" class="about-image img-fluid" alt="">

                        <div class="team-info">
                            <h4 class="mb-2">
                                <a asp-action="CreatorDetails" asp-controller="Account"
                                asp-route-id="@user.Id">
                                    <strong>@user.UserName</strong>
                                </a>
                                <img src="~/images/verified.png" class="verified-image img-fluid" alt="">
                            </h4>

                            <span class="badge">@user.CreatorGenre</span>
                           
                        </div>

                        <div class="social-share">
                            <ul class="social-icon">
                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link bi-twitter"></a>
                                </li>
                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link bi-facebook"></a>
                                </li>
                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link bi-pinterest"></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
