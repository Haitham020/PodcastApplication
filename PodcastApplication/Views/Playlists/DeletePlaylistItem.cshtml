@model PlaylistItem

@{
    ViewData["Title"] = "Delete Playlist Item";
}

<h3>Are you sure you want to delete this playlist Item?</h3>
<div>
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Podcast!.PodcastTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Podcast!.PodcastTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Podcast!.PodcastDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Podcast!.PodcastDescription)
        </dd>

    </dl>

    <form asp-action="DeletePlaylistItem" method="post" >
        <input type="hidden" asp-for="PlaylistItemId"/>
        <input type="hidden" name="PlaylistId" value="@Model.PlaylistId" />

        <input  type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="SavedItemsInPlaylist" asp-route-playlistId ="@Model.PlaylistId">Back to List</a>
    </form>
</div>


