@model PodcastApplication.Models.Playlist

@{
    ViewData["Title"] = "Create Playlist";
}

<section class="create-playlist-section py-5">
    <div class="container">
        <div class="section-title-wrap text-center mb-4">
            <h2>Create Playlist</h2>
            <p class="lead text-muted">Fill out the details to create a new playlist.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <form asp-action="Create" class="card p-4 shadow-sm rounded-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <!-- Playlist Name -->
                    <div class="form-group mb-3">
                        <label asp-for="PlaylistName" class="form-label">Playlist Name</label>
                        <input asp-for="PlaylistName" class="form-control" placeholder="Enter playlist name" />
                        <span asp-validation-for="PlaylistName" class="text-danger"></span>
                    </div>

                    <!-- Playlist Description -->
                    <div class="form-group mb-3">
                        <label asp-for="PlaylistDescription" class="form-label">Description</label>
                        <textarea asp-for="PlaylistDescription" class="form-control" rows="4" placeholder="Enter playlist description"></textarea>
                        <span asp-validation-for="PlaylistDescription" class="text-danger"></span>
                    </div>

                    <!-- Mark As Public -->
                    <div class="form-group form-check mb-4">
                        <input asp-for="IsPublic" class="form-check-input" id="isPublic" />
                        <label class="form-check-label" for="IsPublic">Mark this playlist as public</label>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group">
                        <input type="submit" value="Create Playlist" class="btn btn-success w-100" />
                    </div>
                </form>
            </div>
        </div>

        <!-- Back to List Link -->
        <div class="mt-4 text-center">
            <a asp-action="MyPlaylists" class="btn btn-outline-secondary">Back to My Playlists</a>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .create-playlist-section {
        background-color: #f9f9f9;
        padding: 40px 0;
    }

    .section-title-wrap h2 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
    }

    .section-title-wrap p {
        font-size: 1.1rem;
        color: #777;
    }

    .card {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        border: 1px solid #e0e0e0;
    }

    .form-group .form-label {
        font-weight: 600;
        font-size: 1rem;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        font-size: 1rem;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .form-check-label {
        font-size: 1rem;
        font-weight: 500;
    }

    .btn {
        font-size: 1.1rem;
        padding: 10px 15px;
        border-radius: 5px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-outline-secondary {
        font-size: 1rem;
        padding: 10px 20px;
    }

    .btn-outline-secondary:hover {
        background-color: #f8f9fa;
        color: #007bff;
    }
</style>
