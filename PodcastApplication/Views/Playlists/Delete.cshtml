@model PodcastApplication.Models.Playlist

@{
    ViewData["Title"] = "Delete Playlist";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center text-danger">Are you sure you want to delete this playlist?</h3>

                    <hr />

                    <h4 class="text-center">Playlist Details</h4>
                    <dl class="row">
                        <dt class="col-sm-3">Playlist Name:</dt>
                        <dd class="col-sm-9 font-weight-bold">@Html.DisplayFor(model => model.PlaylistName)</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.PlaylistDescription)</dd>
                    </dl>

                    <div class="text-center mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="PlaylistId" />
                            <button type="submit" class="btn btn-lg btn-danger">Yes, Delete Playlist</button>
                        </form>

                        <a asp-action="MyPlaylists" class="btn btn-link mt-3">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
