@model IEnumerable<dynamic>


<section class="topics-section section-padding pb-0" id="section_3">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Podcast Categories</h4>
                </div>
            </div>
            @foreach(var category in Model)
            {
                <div class="col-lg-3 col-md-6 col-12 mb-4 mb-lg-0">
                    <div class="custom-block custom-block-overlay">
                        <a href="#"
                           class="custom-block-image-wrap">
                            <img src="~/images/topics/@category.Category.CategoryImg" class="custom-block-image img-fluid" alt="">
                        </a>

                        <div class="custom-block-info custom-block-overlay-info">
                            <h5 class="mb-1">
                                <a asp-action="CategoryPodcasts" asp-controller="Categories"
                                asp-route-id="@category.Category.CategoryId">
                                    @category.Category.CategoryName
                                </a>
                            </h5>

                            <p class="badge mb-0">@category.EpisodeCount <small>Available Episodes</small></p>
                        </div>
                    </div>
                </div>

            }
        </div>
        <div class="text-center">
            <a asp-action="AllCategories" asp-controller="Categories"
               class="btn custom-btn smoothscroll mt-3">All Categories</a>
        </div>

    </div>
</section>