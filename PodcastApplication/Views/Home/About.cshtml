@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "About";
}

<style>
    .about-image {
        height: 300px;
        width: 260px;
        object-fit: cover;
    }

</style>



<section class="about-section section-padding" id="section_2">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-12 mx-auto">
                <div class="pb-5 mb-5">
                    <div class="section-title-wrap mb-4">
                        <h4 class="section-title">About PodTalk</h4>
                    </div>

                    <p>Pod Talk is a dynamic podcast application designed to connect creators and listeners in an engaging audio experience. Our platform allows users to discover, create, and share podcasts effortlessly. With features like personalized playlists, real-time episode updates, and community interactions, Pod Talk enhances the way you enjoy and engage with audio content. Join us in exploring a diverse range of topics, connecting with creators, and discovering new voices in the podcasting world.</p>


                    <img src="~/images/medium-shot-young-people-recording-podcast.jpg" class="about-image mt-5 img-fluid" alt="">
                </div>
            </div>

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Meet podcaters</h4>
                </div>
            </div>
            @foreach(var user in Model)
            {
                <div class="col-lg-3 col-md-6 col-12 mb-4 mb-lg-0">
                    <div class="team-thumb bg-white shadow-lg">
                        <img src="~/images/profile/@(string.IsNullOrEmpty(user.ProfileImg) ? "userImg.png" : user.ProfileImg)" class="about-image img-fluid" alt="">

                        <div class="team-info">
                            <h4 class="mb-2">
                                <a asp-action="CreatorDetails"
                                asp-controller="Account"
                                asp-route-id="@user.Id">@user.UserName</a>
                                <img src="~/images/verified.png" class="verified-image img-fluid" alt="">
                            </h4>

                            <span class="badge">@user.CreatorGenre</span>

                        </div>

                        <div class="social-share">
                            <ul class="social-icon">
                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link bi-twitter"></a>
                                </li>

                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link bi-facebook"></a>
                                </li>

                                <li class="social-icon-item">
                                    <a href="#" class="social-icon-link bi-pinterest"></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            


        </div>
    </div>
</section>

