@model PodcastApplication.Models.Podcast

@{
    ViewData["Title"] = "Podcast Details";
}

<h1 class="text-center mb-4">@Model.PodcastTitle</h1>

<div class="card mb-4">
    <div class="row g-0">
        <!-- Podcast Cover Image -->
        <div class="col-md-4">
            <img src="~/images/episodes/@Model.PodcastCoverImg" class="img-fluid rounded-start" alt="Podcast Cover" style="max-width: 100%; height: auto;" />
        </div>

        <!-- Podcast Details -->
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">Podcast Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Title</dt>
                    <dd class="col-sm-8">@Model.PodcastTitle</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.PodcastDescription</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.Category!.CategoryName</dd>

                    <dt class="col-sm-4">Creator</dt>
                    <dd class="col-sm-8">@Model.Creator!.UserName</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge @((Model.IsPublic) ? "bg-success" : "bg-danger")">
                            @(Model.IsPublic ? "Public" : "Not Public")
                        </span>
                    </dd>

                   

                    <dt class="col-sm-4">Created At</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Buttons -->
<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model.PodcastId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
