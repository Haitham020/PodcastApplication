@model PodcastApplication.Models.Episode

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Episode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="EpisodeId" />
            <div class="form-group">
                <label asp-for="EpisodeTitle" class="control-label"></label>
                <input asp-for="EpisodeTitle" class="form-control" />
                <span asp-validation-for="EpisodeTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EpisodeDescription" class="control-label"></label>
                <input asp-for="EpisodeDescription" class="form-control" />
                <span asp-validation-for="EpisodeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AudioFile" class="control-label"></label>
                <input asp-for="AudioFile" class="form-control" />
                <span asp-validation-for="AudioFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EpisodeCoverImg" class="control-label"></label>
                <input type="file" name="imgFile" asp-for="EpisodeCoverImg" class="form-control" />
                <span asp-validation-for="EpisodeCoverImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EpisodeDuration" class="control-label"></label>
                <input asp-for="EpisodeDuration" class="form-control" />
                <span asp-validation-for="EpisodeDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EpisodeNumber" class="control-label"></label>
                <input asp-for="EpisodeNumber" class="form-control" />
                <span asp-validation-for="EpisodeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PodcastId" class="control-label"></label>
                <select asp-for="PodcastId" class="form-control" asp-items="ViewBag.PodcastId"></select>
                <span asp-validation-for="PodcastId" class="text-danger"></span>
            </div>
            

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input id="IsActive" class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input id="IsDeleted" class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>



            <script>
                document.getElementById("IsActive").addEventListener("change", function () {
                    if (this.checked) {
                        document.getElementById("IsDeleted").checked = false;
                    }
                });

                document.getElementById("IsDeleted").addEventListener("change", function () {
                    if (this.checked) {
                        document.getElementById("IsActive").checked = false;
                    }
                });
            </script>


            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

